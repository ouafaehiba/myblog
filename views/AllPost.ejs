<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<%- include('partials/bootstrap.ejs') %> 

    <title>Document</title>
</head>
<body>
  <%- include('partials/bootstrap.ejs') %>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="allpost">MY BLOG</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/blog">Nouveau post</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <%-include('partials/navbar.ejs')%>
    <h1 class="text-center">Bienvenue sur la page</h1>
    <h2 class="text-center text-decoration-underline">Voici les posts :</h1>

    <div class="container">
        <% data.forEach( post => {%>
    
        <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= post.titre%></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= post.auteur %></h6>
              <p class="card-text"><%= post.description %></p>
              <a href="" class="card-link">Card link</a>
              <div class="d-flex justify-content-between">
                <a href="/allposts/<%=post._id%>" class="card-link">
                    <button type="button" class="btn btn-warning">Edit</button>
                </a>
                <form action="/allposts/delete/<%= post._id %>?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <input type="submit" class="btn btn-danger" value="Supprimer">
            </div>
          </div>
    
          <% });%>

    </div>



</body>
</html>